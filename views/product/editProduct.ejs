<%- include('../partials/header.ejs')%>
        <section class="header">
            <div style="padding:20px">
                <form method = "POST" action="/products/<%=product.id%>?_method=PUT">
                    <ul>
                     <li class="pad">
                       <label for="sport">Sports</label>
                       <input type="text" id="sport" name="sport" value="<%=product.sport%>" required>
                     </li>
                     <li class="pad">
                       <label for="title">Title</label>
                       <input type="text" id="title" name="title" value="<%=product.title%>" required>
                     </li>
                     <li class="pad">
                       <label for="desc">Description</label>
                       <textarea  rows ="6" name="desc" id="desc" value="<%=product.desc%>" minlength="10" required><%=product.desc%></textarea>
                     </li>
                     <li class="pad">
                      <label for="image">Image URL</label>
                       <input type="url" id="imgPath" name="imgPath" value="<%=product.imgPath%>" required>
                     </li>
                    </ul>
                        <input type = "submit" name="trade" value="Submit">
                    
                    
                   </form>
                   </div> 
        </section>
