<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content ="width = device-width, initial-scale=1.0">
        <base href="/">
        <title>SPORTIFY</title>
        <link rel = "stylesheet" href="/css/style.css">
    </head>
    <body>
      <header class="headFoot rightAlign">
        <div style="text-align:left">
            <a href="/"> <img  src="/images/SPORTIFYLogo.png" alt="logo" height="75" width="140" ></a>
        </div>
        <div style="text-align: left;padding: 5px;" > <h3><a href="/products" class="link"> Trades </a> </h3></div>
        <% if(firstName && lastName){ %>
          <div>
              <ul>
                  <li  style="font-size: large;color: white;">  Welcome <%= firstName+' '+lastName %>! </li>
              </ul>
          </div>
      <% } %>
            <div>
            <nav>
            <% if(!user){ %>
            <h3><a href="/users/login" class="link">Log In</a> |       
            <a href="/users/new" class="link">Sign Up</a> |
            <% } else { %>      
             <a href="/products/new" class="link">Start Trading</a>
             <a href='/users/profile' class="link">Profile</a>
            <a href='/users/logout' class="link">Logout</a></h3>
            <% } %>
          </nav> 
        </div>
        <% if(errorMessages.length > 0) {%>
          <% errorMessages.forEach(message=>{%>
              <div class='error'>
                  <%=message%>
              </div>
          <%});%>
      <%}%>
      
      <% if(successMessages.length > 0) {%>
          <% successMessages.forEach(message=>{%>
              <div class='success'>
                  <%=message%>
              </div>
          <%});%>
      <%}%>        
    </header>
